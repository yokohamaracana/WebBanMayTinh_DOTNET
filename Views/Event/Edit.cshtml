
@{
    Layout = "_LayoutAdmin";
    var events = ViewData["event"] as Event;
}
<h1>@events.Name</h1>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-header">

        </div>
        <div class="card-body">

            <form autocomplete="off"  asp-controller="Event" asp-action="Update" asp-route-id="@events.Id"  method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Tên sản phẩm</label>
                    <input type="text" class="form-control" name="name" id="" placeholder="Tên sản phẩm..." value="@events.Name" required="">
                    <label for="title">Hình ảnh</label>
                    <input type="file" class="form-control" name="image" id="">
                    <input type="submit" class="btn btn-primary mt-2" value="Sửa">
                </div>
            </form>
        </div>
    </div>
</div>
