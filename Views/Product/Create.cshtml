@{
    Layout = "_LayoutAdmin";
    var brands = ViewData["brand"] as List<Brand>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-header">

        </div>
        <div class="card-body">

            <form autocomplete="off"  asp-controller="Product" asp-action="Store" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Tên sản phẩm</label>
                    <input type="text" class="form-control" name="name" id="" placeholder="Tên sản phẩm..." required="">
                    <label for="title">Hình ảnh</label>
                    <input type="file" class="form-control" name="image" id="" required="">
                    <label for="title">Giá tiền</label>
                    <input type="text" class="form-control" name="price" id="" placeholder="Gía tiền..." required="">
                    <label for="title">Giá tiền sau sales</label>
                    <input type="text" class="form-control" name="discount_price" id="" placeholder="Gía tiền sau sales..." required="">
                    <label for="title">Hãng</label>
                    <select class="form-control" name="brand" id="" required="">
                        @foreach (var brand in brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }

                    </select>
                    <label for="title">Mô tả ngắn</label>
                    <textarea class="form-control" name="short_desc" id="exampleFormControlTextarea1" rows="3" required=""></textarea>
                    <label for="title">Mô tả</label>
                    <textarea class="form-control" name="desc" id="exampleFormControlTextarea1" rows="3" required=""></textarea>
                    <input type="submit" class="btn btn-primary mt-2" value="Thêm">
                </div>
            </form>
        </div>
    </div>
</div>
